<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_large"
    android:elevation="@dimen/elevation">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_small"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/medicines_name"
                android:textSize="@dimen/text_normal_size" />

            <EditText
                android:id="@+id/edit_value_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:textSize="@dimen/text_normal_size" />

            <TextView
                android:id="@+id/show_value_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_text_when_not_specified"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_normal_size"
                android:visibility="gone" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/medicines_dosage"
                android:textSize="@dimen/text_normal_size" />

            <EditText
                android:id="@+id/edit_value_dosage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:textSize="@dimen/text_normal_size" />

            <TextView
                android:id="@+id/show_value_dosage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_text_when_not_specified"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_normal_size"
                android:visibility="gone" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/medicines_reason"
                android:textSize="@dimen/text_normal_size" />

            <EditText
                android:id="@+id/edit_value_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:textSize="@dimen/text_normal_size" />

            <TextView
                android:id="@+id/show_value_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_text_when_not_specified"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_normal_size"
                android:visibility="gone" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/medicines_frequency"
                android:textSize="@dimen/text_normal_size" />

            <EditText
                android:id="@+id/edit_value_frequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:textSize="@dimen/text_normal_size" />

            <TextView
                android:id="@+id/show_value_frequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_vertical_margin"
                android:layout_weight="1"
                android:text="@string/default_text_when_not_specified"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_normal_size"
                android:visibility="gone" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <uk.co.jaspalsvoice.jv.views.YesNoCardView
                android:id="@+id/renalDosageCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:elevation="@dimen/elevation" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <uk.co.jaspalsvoice.jv.views.YesNoCardView
                android:id="@+id/hepaticDosageCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:layout_weight="1"
                android:elevation="@dimen/elevation" />

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/edit"
                style="@style/DefaultButton"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_span="2"
                android:text="@string/medicines_edit" />
        </TableRow>

    </TableLayout>
</android.support.v7.widget.CardView>