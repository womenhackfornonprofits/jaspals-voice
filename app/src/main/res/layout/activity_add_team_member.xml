<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:stretchColumns="1"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/type"
                android:textSize="@dimen/text_normal_size"
                />

            <EditText
                android:id="@+id/typeEdittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:textSize="@dimen/text_normal_size"
                />

            <TextView
                android:id="@+id/typeTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_text_when_not_specified"
                android:visibility="gone"
                android:textSize="@dimen/text_normal_size"/>

        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/medicines_name"
                android:textSize="@dimen/text_normal_size"/>

            <EditText
                android:id="@+id/nameEdittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:textSize="@dimen/text_normal_size"
                />

            <TextView
                android:id="@+id/show_value_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_text_when_not_specified"
                android:visibility="gone"
                android:textSize="@dimen/text_normal_size"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/address_title"
                android:textSize="@dimen/text_normal_size"/>

            <EditText
                android:id="@+id/addressEdittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:textSize="@dimen/text_normal_size"/>

            <TextView
                android:id="@+id/show_value_dosage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_text_when_not_specified"
                android:visibility="gone"
                android:textSize="@dimen/text_normal_size"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gp_medical_team_phone"
                android:textSize="@dimen/text_normal_size"
                />

            <EditText
                android:id="@+id/phoneEdittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="phone"
                android:textSize="@dimen/text_normal_size"/>

            <TextView
                android:id="@+id/show_value_reason"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_text_when_not_specified"
                android:visibility="gone"
                android:textSize="@dimen/text_normal_size"/>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/gp_medical_team_email"
                android:textSize="@dimen/text_normal_size"
                />

            <EditText
                android:id="@+id/emailEdittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/text_normal_size"
                />

            <TextView
                android:id="@+id/show_value_frequency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/default_text_when_not_specified"
                android:visibility="gone"
                android:textSize="@dimen/text_normal_size"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">
            <Button
                android:id="@+id/saveButton"
                style="@style/DefaultButton"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:text="@string/save" />
        </TableRow>
    </TableLayout>
</ScrollView>